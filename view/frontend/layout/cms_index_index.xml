<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container name="homepage.instagram.widget" htmlTag="div" htmlClass="instagram-widget-container" after="-">
                <block class="Bitbull\InstagramWidget\Block\Instagram"
                       name="instagram.widget"
                       template="Bitbull_InstagramWidget::instagram-widget.phtml"
                       ifconfig="bitbull/settings/enabled_homepage">
                    <arguments>
                        <argument translate="true" name="title" xsi:type="string">Instagram</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>